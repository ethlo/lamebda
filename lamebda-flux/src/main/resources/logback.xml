<?xml version="1.0" encoding="UTF-8"?>
<configuration debug="true" scan="true" scanInterval="10">

	<appender name="stdout" class="ch.qos.logback.core.ConsoleAppender">
		<encoder>
			<patterns>%d %5p [%t] [%c:%L] - %m%n%ex
			</patterns>
		</encoder>
	</appender>

	<root level="INFO">
		<appender-ref ref="stdout" />
	</root>

</configuration>